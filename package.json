{
  "name": "flow-linter-vsx",
  "displayName": "Flow Linter",
  "publisher": "corekraft",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/corekraft/flow-linter-vsx"
  },
  "icon": "media/flow-linter.png",
  "description": "Find and fix problems on your salesforce flow on your IDE",
  "version": "1.0.4",
  "engines": {
    "vscode": "^1.99.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Flow Linter",
      "properties": {
        "flow-linter.SpecifyFiles": {
          "type": "boolean",
          "default": false,
          "description": "Specify flow file paths instead of a root directory."
        },
        "flow-linter.NamingConvention": {
          "type": "string",
          "default": "[A-Za-z0-9]+_[A-Za-z0-9]+",
          "description": "Specify a REGEX expression to use as Flow Naming convention."
        },
        "flow-linter.APIVersion": {
          "type": "string",
          "default": ">50",
          "description": "Specify an expression to validate the API version, i.e. '===50'(use at least 50)."
        },
        "flow-linter.Reset": {
          "type": "boolean",
          "default": false,
          "description": "Reset all configurations on every scan"
        }
      }
    },
    "commands": [
      {
        "command": "flow-linter-vsx.viewDefaultFlowRules",
        "title": "Flow Linter: Default Flow Rules"
      },
      {
        "command": "flow-linter-vsx.scanFlows",
        "title": "Flow Linter: Lint Flows"
      },
      {
        "command": "flow-linter-vsx.debugView",
        "title": "Flow Linter: Debug Flow Scanner View"
      },
      {
        "command": "flow-linter-vsx.fixFlows",
        "title": "Flow Linter: Fix Flows"
      },
      {
        "command": "flow-linter-vsx.calculateFlowTestCoverage",
        "title": "Flow Linter: Calculate Flow Coverage"
      },
      {
        "command": "flow-linter-vsx.configRules",
        "title": "Flow Linter: Configure Flow Rules"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "corekraft-fl-sidebar",
          "title": "Flow Linter",
          "icon": "media/logo.svg"
        }
      ]
    },
    "views": {
      "corekraft-fl-sidebar": [
        {
          "type": "webview",
          "id": "corekraft-fl-sb",
          "name": "Flow Linter",
          "icon": "media/logo.svg",
          "contextualTitle": "Flow Linter"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack --config ./build/node-extension.webpack.config.js",
    "watch": "npm run v:update && concurrently \"rollup -c -w\" \"webpack --watch --config ./build/node-extension.webpack.config.js\"",
    "build-webapp": "rollup -c",
    "build": "npm run v:update && rollup -c && vsce package",
    "build:beta": "npm run v:update && rollup -c && vsce package --pre-release",
    "deploy:minor": "vsce publish minor",
    "deploy:major": "vsce publish major",
    "deploy:patch": "vsce publish patch",
    "package": "webpack --mode production --devtool hidden-source-map --config ./build/node-extension.webpack.config.js",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "wdio": "wdio run ./wdio.conf.ts",
    "wdio-test": "npm run build && npm run wdio",
    "________": "scripts for reactive-vscode",
    "v:dev": "run-p v:dev:*",
    "v:build:reactive": "tsup --env.NODE_ENV production --treeshake",
    "v:build:vite": "npm run v:update && vue-tsc --noEmit -p beta-vscode.tsconfig.json && vite build",
    "v:dev:reactive": "tsup --watch ./src --env.NODE_ENV development",
    "v:dev:vite": "vite",
    "v:vite:preview": "vite preview",
    "v:typecheck:reactive": "tsc --noEmit -p reactive-vscode.tsconfig.json",
    "v:vscode:prepublish:reactive": "pnpm run build",
    "v:test:reactive": "jest",
    "v:test": "vitest",
    "v:update": "vscode-ext-gen --output src/generated/meta.ts"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@tsconfig/svelte": "^5.0.4",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.14",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.13.0",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "1.99.1",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vscode-elements/elements": "^1.16.0",
    "@vscode-elements/webview-playground": "^1.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "3.4.0",
    "@wdio/cli": "^9.7.2",
    "@wdio/globals": "^9.7.2",
    "@wdio/local-runner": "^9.7.2",
    "@wdio/mocha-framework": "^9.7.2",
    "@wdio/spec-reporter": "^9.6.3",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "eslint": "^9.19.0",
    "glob": "^11.0.1",
    "jest": "^29.7.0",
    "jest-mock-vscode": "^4.3.2",
    "npm-run-all2": "^8.0.2",
    "postcss": "^8.5.1",
    "prettier": "^3.5.3",
    "reactive-vscode": "0.2.17",
    "rollup": "^4.34.0",
    "rollup-plugin-css-only": "^4.5.2",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-svelte": "^7.2.2",
    "rollup-plugin-svelte-svg": "^1.0.0-beta.6",
    "svelte-preprocess": "^6.0.3",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.3.2",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3",
    "vite": "^6.3.5",
    "vite-plugin-vue-devtools": "^7.7.6",
    "vitest": "^3.1.3",
    "vscode-ext-gen": "^1.0.2",
    "vue": "3.5.14",
    "vue-tsc": "2.2.10",
    "wdio-vscode-service": "^6.1.2",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "convert-array-to-csv": "^2.0.0",
    "@corekraft/flow-linter-core": "1.1.0",
    "tabulator-tables": "^6.3.1",
    "uuid": "^11.0.5",
    "xml2js": "^0.6.2",
    "yaml": "^2.8.0"
  }
}
